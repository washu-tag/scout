# MCP Trino Helm values
replicaCount: 1

image:
  tag: '{{ mcp_trino_version }}'

trino:
  host: trino
  port: 8080
  scheme: http
  ssl: false
  user: '{{ trino_user }}'
  catalog: delta
  schema: default
  allowWriteQueries: false
  queryTimeout: 600
  allowlists:
    catalogs: [delta]
    schemas: [delta.default]
    tables: []

resources: {{ mcp_trino_resources_default | combine(mcp_trino_resources | default({}), recursive=true) | to_json }}

service:
  type: ClusterIP
  port: 8080
